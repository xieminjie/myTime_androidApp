<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tweet_top">
        <com.parse.ParseImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/tweet_userPhoto"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="username"
            android:id="@+id/tweet_username"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:layout_alignLeft="@+id/tweet_userPhoto"
            android:textColor="@color/tabSlideColor"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="time"
            android:id="@+id/tweet_time"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/tabSlideColor"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tweet_top"
        android:id="@+id/tweet_middle">
        <com.parse.ParseImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tweet_photo"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tweet_bottom"
        android:layout_below="@+id/tweet_middle"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tweet_likenum"
            android:text="134"
            android:textSize="18sp"
            android:textColor="@color/tabSlideColor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tweet_commentnum"
            android:text="12"
            android:layout_alignLeft="@+id/tweet_likenum"
            android:layout_marginLeft="50dp"
            android:textSize="18sp"
            android:textColor="@color/tabSlideColor"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tweet_like_btn"
            android:layout_below="@+id/tweet_likenum"
            android:text="like" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tweet_commment_btn"
            android:text="comment"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/tweet_likenum"/>

    </RelativeLayout>


</RelativeLayout><!-- From: file:/Users/jizhizili/Dropbox/MobileDeveloping/myTime/ParseStarterProject/src/main/res/layout/main_custom_row.xml -->