<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.parse.starter.PhotoEdit">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brightness/Contrast"
        android:id="@+id/textView8"
        android:textSize="22dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#00796B"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editPhoto"
        android:minWidth="300dp"
        android:minHeight="300dp"
        android:maxHeight="300dp"
        android:maxWidth="300dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="laststep"
        android:id="@+id/laststep"
        android:background="#00796B"
        android:textColor="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="15dp"
        android:layout_alignTop="@+id/nextstep"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nextstep"
        android:id="@+id/nextstep"
        android:background="#00796B"
        android:textColor="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="15dp"
        android:layout_below="@+id/textView8"
        android:layout_alignRight="@+id/editPhoto"
        android:layout_alignEnd="@+id/editPhoto"
        android:layout_marginTop="18dp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/brightness"
        android:indeterminate="false"
        android:max="200"
        android:progress="100"
        android:layout_below="@+id/textView10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contrast"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/brightness"
        android:layout_alignEnd="@+id/brightness"
        android:layout_alignLeft="@+id/brightness"
        android:layout_alignStart="@+id/brightness"
        android:indeterminate="false"
        android:max="10"
        android:progress="5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="brightness"
        android:textColor="@color/primaryColor"
        android:textSize="20dp"
        android:id="@+id/textView10"
        android:layout_below="@+id/editPhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="contrast"
        android:id="@+id/textView11"
        android:textColor="@color/primaryColor"
        android:textSize="20dp"
        android:layout_above="@+id/contrast"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10" />

</RelativeLayout>
